{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug KVM Hypervisor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/mini_hypervisor",
            "args": [
                "--memory", "4", 
                "--page", "2", 
                "--guest", "guest.img"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
